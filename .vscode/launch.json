{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch AstPrinter",
      "request": "launch",
      "mainClass": "com.kos.language.AstPrinter",
      "projectName": "jlox"
    },
    {
      "type": "java",
      "name": "Launch GenerateAst",
      "request": "launch",
      "mainClass": "com.kos.tool.GenerateAst",
      "projectName": "jlox"
    },
    {
      "type": "java",
      "name": "Launch Lox",
      "request": "launch",
      "mainClass": "com.kos.language.Lox",
      "projectName": "jlox"
    },
    {
      "type": "java",
      "name": "Launch App",
      "request": "launch",
      "mainClass": "com.kos.language.App",
      "projectName": "jlox"
    },
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "-i"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
